<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Splash screen -->

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Tab Layout Tabs -->

    <style name="TabTextCapitalization" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <!-- Favorites Screen -->

    <style name="TextViewFavoritesTitle">
        <item name="android:textSize">@dimen/material_design_title_txt_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/margin_between_elements_default</item>
    </style>

    <style name="ButtonAddFavorites">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
